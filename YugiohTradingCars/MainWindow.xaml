<Window x:Class="YugiohTradingCars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YugiohTradingCars"
        xmlns:viewModel="clr-namespace:YugiohTradingCars.MVVM.ViewModels"
        xmlns:view="clr-namespace:YugiohTradingCars.MVVM.Pages"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WPFGlobalStyles/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="PersonDataTemplate">
                <DockPanel>
                    <TextBlock Text="{Binding Age}" Margin="5"/>
                    <TextBlock Text="{Binding PreName}" Margin="5"/>
                    <TextBlock Text="{Binding Name}" Margin="5"/>
                </DockPanel>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:HomePageViewModel}">
                <view:HomePage />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:CardsPageViewModel}">
                <view:Cards />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Grid.Row="0" Grid.Column="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Style="{StaticResource ButtonStyle}" Content="Home" Command="{Binding ShowHomeCommand}" Margin="5"/>
            <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource ButtonStyle}" Content="Cards" Command="{Binding ShowTestCommand}" Margin="5"/>
        </Grid>

        <DockPanel Grid.Row="1" Grid.Column="0" >
            <Frame Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden"/>
        </DockPanel>


        <DockPanel Grid.Row="2" Grid.Column="0" Height="23">
            <Label Content="{Binding GlobalUserMessage}"/>
        </DockPanel>
    </Grid>
</Window>
